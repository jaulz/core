{
  "name": "@variantjs/core",
  "version": "0.0.12",
  "description": "VariantJS common functions and utilities",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest --config  jestconfig.json --coverage",
    "test:watch": "jest  --coverage --watch --config jestconfig.json",
    "watch": "tsc --watch",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint src --fix",
    "release": "release-it"
  },
  "keywords": [
    "tailwindcss",
    "react",
    "vue",
    "react-tailwind",
    "vue-tailwind",
    "variantjs  "
  ],
  "author": "Alfonso Bribiesca <alfonso@vexilo.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alfonsobries/vue-tailwind"
  },
  "license": "MIT",
  "private": false,
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "jest": "^26.6.3",
    "ts-jest": "^26.5.5",
    "@types/node": "^14.14.41",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-prettier": "^3.4.0",
    "prettier": "^2.2.1",
    "release-it": "^14.6.1",
    "typescript": "^4.2.4"
  },
  "files": [
    "dist/**/*"
  ],
  "release-it": {
    "hooks": {
      "before:init": [
        "yarn lint",
        "yarn test"
      ],
      "after:bump": "yarn build"
    }
  }
}
